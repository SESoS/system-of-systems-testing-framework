<?xml version="1.0" encoding="utf-8"?>
<Diagram type="Role">
  <Actor name="MCI_Reporter">
    <arrow name="activateMCI" to="CommunicationCenter" />
  </Actor>
  <Role name="CommunicationCenter">
    <attribute type="achieves" name="Communicate" />
    <attribute type="requires" name="ProcessHelpRequest" />
    <arrow name="reportMCI" to="IncidentCommander" />
    <arrow name="pickupPatient" to="EmergencyVehicle" />
  </Role>
  <Role name="IncidentCommander">
    <attribute type="achieves" name="ReportIncident" />
    <attribute type="requires" name="BroadcastVehicle" />
    <arrow name="assignAmbulance" to="CommunicationCenter" />
  </Role>
  <Role name="EmergencyVehicle">
    <attribute type="achieves" name="LocatePatient" />
    <attribute type="achieves" name="TransferPatient" />
    <attribute type="requires" name="GetPatientStatus" />
    <attribute type="requires" name="FindSuitableHospital" />
    <arrow name="performPrimaryTriage" to="EmergencyServices" />
  </Role>
  <Role name="EmergencyServices">
    <attribute type="achieves" name="TreatPatient" />
    <attribute type="requires" name="PerformFirstAid" />
    <arrow name="receivePatient" to="MedicalCenter" />
  </Role>
  <Role name="MedicalCenter">
    <attribute type="achieves" name="SavePatient" />
    <attribute type="achieves" name="MedicalCare" />
    <attribute type="requires" name="CurePatient" />
    <arrow name="reportSavedPatient" to="CommunicationCenter" />
  </Role>
</Diagram>